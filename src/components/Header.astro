---
import GlobeAmericas from '../assets/globe-americas.svg'
import GlobeAsiaAustralia from '../assets/globe-asia-australia.svg'
import GlobeEuropeAfrica from '../assets/globe-europe-africa.svg'

import UpdatedIcon from '../assets/arrow-path-rounded-square.svg'
import { parseTimeZone } from '../formatters'
import { lastUpdatedLabel, parseLastUpdated } from '../lastUpdated'

const { cf, env } = Astro.locals.runtime

const timeZone = cf?.timezone

const lastUpdatedTimeStamp = await env.THE_SHOOK_ONE.get('last-updated')
const lastUpdated = parseLastUpdated(lastUpdatedTimeStamp)
---

<header>
  <a href="/" class="logo">ðŸ«¨</a>
  <div class="column">
    <h1>Feed Updates</h1>
    <div class="meta">
      {
        lastUpdated && (
          <div>
            <UpdatedIcon /> {lastUpdatedLabel(lastUpdated)}
          </div>
        )
      }
      {
        timeZone && (
          <div>
            {timeZone.startsWith('America/') ? (
              <GlobeAmericas />
            ) : timeZone.startsWith('Asia/') ||
              timeZone.startsWith('Australia/') ? (
              <GlobeAsiaAustralia />
            ) : (
              <GlobeEuropeAfrica />
            )}
            {parseTimeZone(timeZone)}
          </div>
        )
      }
    </div>
  </div>
</header>

<style>
  header {
    display: flex;
    flex-direction: row;
    gap: 0.75rem;
    margin-block-end: 0.5rem;
    padding-inline-start: 0.5rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .logo {
    font-size: 3rem;
    text-decoration: none;
  }

  .column {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }

  .meta {
    color: light-dark(var(--color-400), var(--color-500));
    display: flex;
    flex-direction: row;
    font-size: 0.75rem;
    font-weight: 500;
    gap: 0.75rem;

    > div {
      align-items: center;
      display: flex;
    }
  }

  svg {
    margin-inline-end: 0.25rem;
  }
</style>
